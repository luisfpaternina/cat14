<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="update_fields_from_end_ot" model="base.automation">
            <field name="name">Update fields from end OT</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="active">1</field>
            <field name="trigger">on_create_or_write</field>
            <field name="filter_domain"></field>
            <field name="state">code</field>
            <field name="code">if record.check_pit or record.check_cabine or record.check_machine:
  if record.timesheet_ids and record.stage_id.is_project_fsm:
    record.write({'is_end_ot': True})</field>
        </record>

        <record id="action_automated_qr_done_state_timesheet" model="base.automation">
            <field name="name">TRABAJOS FINALIZADOS OTs</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="active">1</field>
            <field name="trigger">on_create_or_write</field>
            <field name="filter_domain">[["is_end_ot","=",True]]</field>
            <field name="state">next_activity</field>
            <field name="activity_type_id" ref="mail.mail_activity_data_todo"/>
            <field name="activity_summary">OT FINALIZADA</field>
            <field name="activity_user_type">generic</field>
        </record>

    </data>
</odoo>