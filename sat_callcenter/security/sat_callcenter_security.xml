<?xml version="1.0" encoding="utf-8"?>
<odoo>

<data noupdate="1">
    <record id="group_sat_callcenter_tier1" model="res.groups">
        <field name="name">CallCenter Tier1</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_all_internal_excep_tier1" model="res.groups">
        <field name="name">All Internal except Tier1</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>
    
    <record model="ir.rule" id="sat_callcenter_tier1_user_rule_see_warnings_only">
        <field name="name">Project/Task: callcenter tier1: see warnings only</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="domain_force">[('ot_type_id.code', '=', '05'),]</field> <!--Código 05 es el tipo de OT "AVISOS"-->
        <field name="groups" eval="[(4,ref('sat_callcenter.group_sat_callcenter_tier1'))]"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="perm_write" eval="False"/>
    </record>

    <record model="ir.rule" id="sat_callcenter_tier1_user_rule_sale_order_type_see_warnings_only">
        <field name="name">Sale Order Type: callcenter tier1: see warnings only</field>
        <field name="model_id" ref="sat_companies_project.model_sale_order_type"/>
        <field name="domain_force">[('code', '=', '05'),]</field> <!--Código 05 es el tipo de OT "AVISOS"-->
        <field name="groups" eval="[(4,ref('sat_callcenter.group_sat_callcenter_tier1'))]"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="perm_write" eval="False"/>
    </record>

    <record model="ir.rule" id="sat_callcenter_tier1_user_rule_project_task_categ_udn_see_warnings_only">
        <field name="name">Task Categ. UDN: callcenter tier1: see warnings only</field>
        <field name="model_id" ref="sat_companies_project.model_project_task_categ_udn"/>
        <field name="domain_force">[('code', '=', 'AV'),]</field> <!--Código AV es el tipo de OT "AVISOS"-->
        <field name="groups" eval="[(4,ref('sat_callcenter.group_sat_callcenter_tier1'))]"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="perm_write" eval="False"/>
    </record>

</data>
</odoo>
