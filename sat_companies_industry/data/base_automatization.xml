<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="automatization_write_planning_hours_ots" model="base.automation">
        <field name="name">Actualizar horas planeadas OTs</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="state">code</field>
        <field name="trigger">on_create_or_write</field>
        <field name="active" eval="True"/>
        <field name="code">sale = env['sale.order'].search([('name', '=', record.origin)], limit=1)
if sale:
  record.write({'planned_hours': sale.total_service_line})</field>
    </record>

</odoo>