<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <record id="view_project_task_breakdowns_tree" model="ir.ui.view">
            <field name="name">project.task.breakdowns.tree</field>
            <field name="model">project.task.breakdowns</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree >
                    <field name="code"/>
                    <field name="name"/>   
                </tree>
            </field>
        </record>

        <record id="view_project_task_breakdowns_form" model="ir.ui.view">
            <field name="name">project.task.breakdowns.form</field>
            <field name="model">project.task.breakdowns</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="ot_checklist_form">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            <field name="name" required="1" placeholder="Name"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                                
                            </group>
                            <group>
                                
                            </group>
                            <group>
                                
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_breakdowns">
            <field name="name">Breakdowns</field>
            <field name="res_model">project.task.breakdowns</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_project_task_breakdowns" 
            name="Breakdowns" 
            parent="industry_fsm.fsm_menu_settings"
            action="sat_companies_industry.action_view_breakdowns"
            />

    </data>
</odoo> 
