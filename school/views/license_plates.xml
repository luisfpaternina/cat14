<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>
        <record id="view_license_plates_tree" model="ir.ui.view">
            <field name="name">license.plates.tree</field>
            <field name="model">license.plates</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="license_plates">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="view_license_plates_form" model="ir.ui.view">
            <field name="name">license.plates.form</field>
            <field name="model">license.plates</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="license_plates">
                        <header>
                            <button name="create_record_in_Sale_order" 
                            	    string="Create sale order" 
                            	    type="object" 
                            	    class="oe_highlight" 
                            	    confirm="Are you sure?"/>
                            <button 
                                    string="Confirm"
                                    name="mark_finished"
                                    type="object"
                                    class="oe_highlight"
                                    attrs="{'invisible': [('state', '=', 'finished')]}"
                                    />
                            <button 
                                    string="Cancel"
                                    name="action_show_wizard"
                                    type="object"
                                    context="{'default_license_plates_id': active_id}"
                                    />
                            <field name="state" widget="statusbar"/>
                        </header>
                    <sheet>
                        <widget name="web_ribbon" title="Finished" attrs="{'invisible': [('state', '!=', 'finished')]}"/>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;"><field name="name" required="1" placeholder="Name" /></td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="create_date" readonly="True"/>
                                <field name="student_id" required="True" options = "{'no_open': true, 'no_quick_create': true ,'no_create_edit': true,'no_create':true}"/>
                                <field name="identification_type"/>
                                <field name="identification_number"/>
                                <field name="blood_group"/>
                            </group>
                            <group>
                                <field name="address"/>
                                <field name="neighborhood"/>
                                <field name="cellphone"/>
                                <field name="email"/>
                            </group>
                            <group string="Documents">
                               
                            </group>
                        </group>
                        <notebook colspan="4">
                        <page name="courses_information" string="Courses information">
                            <group>
                                <field name="course_line_ids">
                                    <tree editable="bottom">
                                        <field name="course_id" required="1"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_view_license_plates">
            <field name="name">License Plates</field>
            <field name="res_model">license.plates</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new License Plate
                </p>
            </field>
        </record>

        <menuitem
            id="school_license_plates"
            name="License Plates"
            parent="menu_school"
            action="action_view_license_plates"/>
        
    </data>
</odoo>