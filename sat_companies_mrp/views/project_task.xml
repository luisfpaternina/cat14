<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_task_sat_companies_mrp" model="ir.ui.view">
        <field name="name">inherit.form.project.task</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sale_id" invisible="1"/>
                <button name="get_work_records" string="works" type="object" invisible="1"/>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="minute_point_mrp_page" string="Minute point" attrs="{'invisible': [('sale_id', '=', False)]}">
                    <group>
                        <field name="order_line">
                            <tree>
                                <field name="name" invisible="1"/>
                                <field name="order_id" invisible="1"/>
                                <field name="minute_point_id"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
