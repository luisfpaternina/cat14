<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_inherit_sat_companies_mrp" model="ir.ui.view">
        <field name="name">sale.orderform.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form/sheet/notebook/page[(@name='customer_signature')]" position="after">
                <page string="KITS/Checklist" name="kits_components">
                    <group>
                        <field name="sale_bom_ids">
                            <tree>
                                <field name="product_id"/>
                                <field name="bom_id" invisible="1"/>
                                <field name="bom_line_ids"  widget="many2many_tags"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='name']" position="after">
                <field name="bom_id" invisible="1"/>
                <field name="bom_line_ids" widget="many2many_tags" invisible="0"/>
            </xpath>

        </field> 
    </record>

</odoo>