<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="mail_template_invoice_due_letter" model="mail.template">
            <field name="name">Customer: Send by email invoice due letter</field>
            <field name="model_id" ref="pc_invoice_payment_due_letter.model_x_invoice_payment_due"/>
            <field name="email_from">${(object.partner_id.email_formatted or user.email_formatted) |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">Invoice due ${object.date or 'n/a'}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                        % if object.partner_id.parent_id:
                            ${object.partner_id.name} (${object.partner_id.parent_id.name}),
                        % else:
                            ${object.partner_id.name},
                        % endif
                        <br /><br />
                        In the attached document we indicate the invoices and bills pending payment for having exceeded their due date.
                        <br/><br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/><br/>
                        Thanks.
                        Regards
                    </p>
                </div>
            </field>
            <field name="report_template" ref="report_invoice_due_letter"/>
            <field name="report_name">Invoice_due_letter_${(object.partner_id.name or '')}_${(object.date or '')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>
