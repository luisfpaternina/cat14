<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    
    <data>

        <record id="view_gadget_stop_reason_tree" model="ir.ui.view">
            <field name="name">gadget.stop.reason.tree</field>
            <field name="model">gadget.stop.reason</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_gadget_stop_reason_form" model="ir.ui.view">
            <field name="name">gadget.stop.reason.form</field>
            <field name="model">gadget.stop.reason</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            <field name="name" required="1" placeholder="Name"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_gadget_stop_reason">
            <field name="name">Gadget stop reason</field>
            <field name="res_model">gadget.stop.reason</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_gadget_stop_reason" 
            name="Gadget stop reason" 
            parent="sat_companies_stock.menu_technical_data"
            action="action_view_gadget_stop_reason"
            sequence="94"
            />

    </data>

</odoo> 